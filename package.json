{
  "name": "a-mail-signature",
  "description": "Generate and modify Apple Mail E-Mail signatures",
  "version": "0.0.4",
  "main": "./dist/index.js",
  "bin": {
    "a-mail-signature": "./bin/index.js"
  },
  "author": "Danny Koppenhagen <mail@d-koppenhagen.de> (https://d-koppenhagen.de)",
  "homepage": "https://github.com/d-koppenhagen/a-mail-signature",
  "bugs": {
    "url": "https://github.com/d-koppenhagen/a-mail-signature/issues",
    "email": "mail@d-koppenhagen.de"
  },
  "license": "SEE LICENSE IN LICENSE",
  "engines": {
    "node": "^10.0.0"
  },
  "scripts": {
    "start": "ts-node src/index.ts",
    "build": "tsc -p .",
    "clean": "rimraf dist",
    "lint": "eslint \"**/*.{ts,js}\"",
    "format": "prettier --write \"**/*.{ts,js,json,yaml,yml,md}\"",
    "format:check": "prettier --debug-check \"**/*.{ts,js,json,yaml,yml,md}\"",
    "release": "standard-version"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --max-warnings 100",
      "git add"
    ],
    "*.{ts,js,json,yaml,yml,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "chalk": "^3.0.0",
    "plist": "^3.0.1",
    "select-prompt": "^0.3.2",
    "uuid": "^7.0.2",
    "yargs": "^15.3.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@types/node": "^13.9.3",
    "@types/plist": "^3.0.2",
    "@types/uuid": "^7.0.2",
    "@types/yargs": "^15.0.4",
    "commitizen": "^4.0.3",
    "cz-conventional-changelog": "^3.1.0",
    "eslint": "^6.8.0",
    "eslint-config-neo": "^0.5.2",
    "husky": "^4.2.3",
    "lint-staged": "^10.0.8",
    "prettier": "^2.0.1",
    "rimraf": "^3.0.2",
    "standard-version": "^7.1.0",
    "ts-node": "^8.8.1",
    "typescript": "^3.8.3"
  }
}
